<% content_for :subnavigation do -%>
  <div class="elevencol last">
    <%= subnavigation :new_debt %>
  </div>
<% end -%>

<header class="container">
  <div class="row">
    <div class="onecol">
      &nbsp;
    </div>
    <div class="elevencol last">
      <h1><%= t "views.budgets.index.header" %></h1>
    </div>
  </div>
</header>
<section>
  <div class="container">
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="elevencol last">
        <%= render :partial => 'shared/total_debt', :object => current_user.total_debt %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="twocol">
        <h4><%= t("views.budgets.budget_table.contact") %></h4>
      </div>
      <div class="twocol text_right">
        <h4><%= t("views.budgets.budget_table.debts") %></h4>
      </div>
      <div class="twocol text_right">
        <h4><%= t("views.budgets.budget_table.loans") %></h4>
      </div>
      <div class="twocol text_right">
        <h4><%= t("views.budgets.budget_table.total") %></h4>
      </div>
      <div class="onecol text_right">
        <h4><%= t("views.budgets.budget_table.paid") %></h4>
      </div>
      <div class="twocol last">
        &nbsp;
      </div>
    </div>
    <%= render :partial => 'budget_spacer' %>
  </div>
  <div class="container">
    <%= render @budgets %>
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="elevencol last">
        <%= will_paginate @budgets %>
      </div>
    </div>
  </div>
</section>
