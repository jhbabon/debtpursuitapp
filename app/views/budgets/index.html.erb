<% content_for :subnavigation do -%>
  <div class="elevencol last">
    <%= subnavigation :new_debt %>
  </div>
<% end -%>

<header class="container">
  <div class="row">
    <div class="onecol">
      &nbsp;
    </div>
    <div class="elevencol last">
      <h1>Budgets</h1>
    </div>
  </div>
</header>
<section>
  <div class="container">
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="elevencol last">
        <%= render :partial => 'shared/total_debt', :object => current_user.total_debt %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="twocol">
        <h4>Contact</h4>
      </div>
      <div class="twocol text_right">
        <h4>Debts</h4>
      </div>
      <div class="twocol text_right">
        <h4>Loans</h4>
      </div>
      <div class="twocol text_right">
        <h4>Total</h4>
      </div>
      <div class="onecol text_right">
        <h4>Paid</h4>
      </div>
      <div class="twocol last">
        &nbsp;
      </div>
    </div>
    <%= render :partial => 'budget_spacer' %>
  </div>
  <div class="container">
    <%= render @budgets %>
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="elevencol last">
        <%= will_paginate @budgets %>
      </div>
    </div>
  </div>
</section>
