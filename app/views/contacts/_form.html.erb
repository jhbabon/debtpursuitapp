<%= form_for(contact,
             :builder => FancyFormBuilder,
             :html    => { :class => %(form) }) do |f| %>
  <%= f.form_error %>
  <%= f.hidden_field :user_id %>
  <%= f.text_field :email %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.submit "Save", :cancel => link_to("cancel", contacts_path) %>
<% end -%>
