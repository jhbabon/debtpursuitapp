<%= form_for(contact,
             :builder => FancyFormBuilder,
             :html    => { :class => %(form) }) do |f| %>
  <%= f.form_error %>
  <%= f.hidden_field :user_id %>
  <%= f.text_field :email %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.submit t("app.form.submit"), :cancel => link_to(t("app.form.cancel"), contacts_path) %>
<% end -%>
