<% content_for :subnavigation do -%>
  <div class="grid_12">
    <%= subnavigation link_to(t("app.links.new_contact"), select_contacts_path) %>
  </div>
  <%= render 'shared/clear' %>
<% end -%>

<header class="grid_12">
  <h1><%= t "views.contacts.index.header" %></h1>
</header>
<%= render "shared/clear" %>

<div class="grid_8">
  <section>
    <% if @contacts.blank? -%>
      &nbsp;
    <% else -%>
      <% @contacts.each_slice(2) do |cols| -%>
        <%= render(cols.first, :css => "alpha") %>
        <%= render(cols.last, :css => "omega") if cols.count == 2 %>
        <%= render "shared/spacer" %>
      <% end -%>
    <% end -%>
  </section>
</div>

<aside class="grid_4">
<div class="sidebar">
  <%= render "contacts/sidebar" %>
  <%= render "invitations/sidebar" %>
</div>
</aside>
<%= render 'shared/clear' %>

<footer>
  <div class="grid_12">
    <%= will_paginate @contacts %>
  </div>
  <%= render "shared/clear" %>
</footer>
