<% content_for :subnavigation do -%>
  <div class="grid_12">
    <%= subnavigation link_to(t("app.links.see_all_contacts"), contacts_path),
                      :new_debt %>
  </div>
  <%= render 'shared/clear' %>
<% end -%>

<header class="grid_12">
  <h1><%= t "views.contacts.select.header" %></h1>
</header>
<%= render 'shared/clear' %>
<section>
  <div class="grid_6">
    <header>
      <h2><%= t "views.contacts.select.personal_contact.header" %></h2>
    </header>
    <section>
      <p><%= t "views.contacts.select.personal_contact.text" %></p>
      <p><%= link_to t("views.contacts.select.personal_contact.link"), new_contact_path, :class => "button main" %></p>
    </section>
  </div>
  <div class="grid_6">
    <header>
      <h2><%= t "views.contacts.select.invitation.header" %></h2>
    </header>
    <section>
      <p><%= t "views.contacts.select.invitation.text" %></p>
      <%= render 'users/search_form' %>
    </section>
  </div>
</section>
<%= render 'shared/clear' %>
