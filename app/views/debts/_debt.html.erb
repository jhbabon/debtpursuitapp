<div class="debt_info" title="<%= debt.note %>">
  <div class="grid_2 alpha">
    <span class="date"><%= l debt.date %></span>
  </div>
  <div class="grid_1">
    <% state = debt.paid? ? "paid" : "unpaid" -%>
    <span class="state <%= state %>"><%= t("views.debts.state.#{state}").downcase %></span>
  </div>
  <div class="grid_5 text <%= state %>">
    <%= raw t("views.debts.info.#{debt.kind}", :amount => mark_amount(number_to_currency(debt.amount)), :contact => link_to(debt.budget.contact.full_name, debt.budget.contact)) %>
  </div>
  <div class="grid_1 suffix_3 omega">
    <%= link_to t("app.links.see_more"), debt %>
  </div>
</div>
<%= render 'shared/spacer' %>
