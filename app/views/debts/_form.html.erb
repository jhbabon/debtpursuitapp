<%= form_for(debt,
             :builder => FancyFormBuilder,
             :html    => { :class => %(form) }) do |f| %>
  <%= f.form_error %>
  <%= f.radio_button :kind, ["debt", "loan"], :hint => t("views.debts.form.hints.kind"), :label => t("activerecord.attributes.debt.kind") %>
  <% budgets_array = current_user.budgets.all.map { |b| [b.contact.full_name, b.id] } -%>
  <%= f.select :budget_id, budgets_array, :label => t("activerecord.models.contact"), :hint => t("views.debts.form.hints.contact") %>
  <%= f.text_field :amount %>
  <%= f.text_field :date, 'data-effect' => 'datepicker', :tooltip => false %>
  <%= f.text_area :note %>
  <%= f.submit t("app.form.submit"), :cancel => link_to(t("app.form.cancel"), budgets_path) %>
<% end -%>
