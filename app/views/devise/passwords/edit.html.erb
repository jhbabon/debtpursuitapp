<%= form_for(resource,
             :as => resource_name,
             :builder => CustomFormBuilder,
             :url => password_path(resource_name),
             :html => { :method => :put,
                        :class  => %(form box) }) do |f| %>
  <%= f.form_head "Change your password" %>
  <section class="form_body">
    <%= f.form_errors devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Change my password" %>
  </section>
  <%= f.instructions render(:partial => "devise/shared/links") %>
<% end %>
