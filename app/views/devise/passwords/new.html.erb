<h2>Forgot your password?</h2>
<%= form_for(resource,
             :as => resource_name,
             :builder => FancyFormBuilder,
             :url => password_path(resource_name),
             :html => { :method => :post,
                        :class  => %(form) }) do |f| %>
  <%= f.form_error flash[:alert] %>
  <%= f.text_field :email %>
  <%= f.submit "Send me reset password instructions" %>
<% end %>
<%= render :partial => "devise/shared/links" %>
