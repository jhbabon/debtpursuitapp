<%= form_for(resource,
             :as => resource_name,
             :builder => CustomFormBuilder,
             :url => password_path(resource_name),
             :html => { :method => :post,
                        :class  => %(form box) }) do |f| %>
  <%= f.form_head "Forgot your password?" %>
  <section class="form_body">
    <%= f.form_errors devise_error_messages! %>
    <%= f.text_field :email %>
    <%= f.submit "Send me reset password instructions" %>
  </section>
  <%= f.instructions render(:partial => "devise/shared/links") %>
<% end %>
