<section class="container">
  <div class="row">
    <div class="onecol">
      &nbsp;
    </div>
    <div class="elevencol last">
      <header>
        <h1>Edit user settings</h1>
      </header>
      <section>
        <%= form_for(resource,
                     :as   => resource_name,
                     :builder => FancyFormBuilder,
                     :url  => registration_path(resource_name),
                     :html => { :method => :put,
                                :class  => %(form)}) do |f| %>
          <%= f.form_error %>
          <%= f.text_field :email %>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
          <%= f.password_field :password, :label => "New password" %>
          <%= f.password_field :password_confirmation, :label => "New password confirmation", :hint => "Rewrite the new password" %>
          <%= f.submit "Update", :cancel => link_to("cancel", home_index_path) %>
        <% end %>
      </section>
      <footer>
        <p>Unhappy? <%= link_to"Cancel account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
      </footer>
    </div>
</section>
