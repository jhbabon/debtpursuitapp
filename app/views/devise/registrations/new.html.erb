<%= form_for(resource,
             :as   => resource_name,
             :builder => CustomFormBuilder,
             :url  => registration_path(resource_name),
             :html => { :class => %(form box) } ) do |f| %>
  <%= f.form_head "Sign up" %>
  <section class="form_body">
    <%= f.form_errors devise_error_messages! %>
    <%= f.text_field :email, :required => true %>
    <%= f.text_field :first_name, :required => true %>
    <%= f.text_field :last_name, :required => true %>
    <%= f.password_field :password, :required => true %>
    <%= f.password_field :password_confirmation, :required => true %>
    <%= f.submit "Sign up" %>
  </section>
  <%= f.instructions raw("<p>The fields with a <span class=\"required\">*</span> are required.</p>") + render(:partial => "devise/shared/links") %>
<% end %>
