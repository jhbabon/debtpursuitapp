<%= form_for(resource,
             :as   => resource_name,
             :builder => FancyFormBuilder,
             :url  => session_path(resource_name),
             :html => { :class => %(form) } ) do |f| %>
  <%= f.form_error flash[:alert] %>
  <%= f.text_field :email, :tooltip => false %>
  <%= f.password_field :password, :tooltip => false %>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :tooltip => false %>
  <% end -%>
  <%= f.submit "Login" %>
<% end %>
<%= render :partial => "devise/shared/links" %>
