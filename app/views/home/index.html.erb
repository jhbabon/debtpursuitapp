<% content_for :subnavigation do -%>
  <div class="elevencol last">
    <%= subnavigation :new_debt %>
  </div>
<% end -%>

<div class="container">
  <div class="row">
    <div class="onecol">
      &nbsp;
    </div>
    <header class="elevencol last">
    <h1><%= t "views.home.index.header" %></h1>
    </header>
  </div>
  <section>
    <div class="row">
      <div class="onecol">
        &nbsp;
      </div>
      <div class="twocol">
        <h4><%= t "views.home.index.table.date" %></h4>
      </div>
      <div class="threecol">
        <h4><%= t "views.home.index.table.contact" %></h4>
      </div>
      <div class="twocol text_right">
        <h4><%= t "views.home.index.table.amount" %></h4>
      </div>
      <div class="onecol">
        <h4><%= t "views.home.index.table.type" %></h4>
      </div>
      <div class="onecol">
        <h4><%= t "views.home.index.table.paid" %></h4>
      </div>
      <div class="twocol last">
        &nbsp;
      </div>
    </div>
    <%= render :partial => 'budgets/budget_spacer' %>
    <% @debts.each do |debt| -%>
      <div class="row debt_info">
        <div class="onecol">
          &nbsp;
        </div>
        <div class="twocol">
          <%= l debt.date %>
        </div>
        <div class="threecol">
          <%= debt.budget.contact.full_name %>
        </div>
        <div class="twocol text_right">
          <%= mark_amount(number_to_currency(debt.amount)) %>
        </div>
        <div class="onecol">
          <%= t "activerecord.attributes.debt.kinds.#{debt.kind}" %>
        </div>
        <div class="onecol">
          <%= boolean_to_string debt.paid? %>
        </div>
        <div class="twocol last">
          <%= link_to t("app.links.see_more"), debt.budget.contact, :class => "button main" %>
        </div>
      </div>
      <%= render :partial => 'budgets/budget_spacer' %>
    <% end -%>
  </section>
</div>
