<div class="grid_8 suffix_4">
  <div class="grid_6 alpha">
    <%= raw t("views.invitations.invitation.text", :name => content_tag(:strong, invitation.sender.full_name)) %>
  </div>
  <div class="grid_2 omega">
    <%= button_to t("views.invitations.invitation.links.accept"), { :action => "accept", :id => invitation.to_param }, :method => :put %>
    <%= link_to t("views.invitations.invitation.links.reject"), invitation, :confirm => t("app.actions.confirmation"), :method => :delete, :class => "button small" %>
  </div>
  <%= render 'shared/spacer' %>
</div>
<%= render 'shared/clear' %>
