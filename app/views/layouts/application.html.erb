<!DOCTYPE html>
<html>
  <head>
    <title>DebtPursuit</title>
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "960", :media => "screen" %>
    <%= stylesheet_link_tag "layout", :media => "screen" %>
    <%= stylesheet_link_tag "redmond/jquery.ui", :media => "screen" %>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>

    <div class="container_12">
      <%= render 'layouts/user_info' %>
      <%= render 'layouts/main_nav' %>
    </div>

    <div class="layout">
      <div class="container_12">
        <%= render 'layouts/flash_message', :key => :alert %>
        <%= render 'layouts/flash_message', :key => :notice %>
        <%= yield :subnavigation %>
        <%= yield %>
      </div>
    </div>

    <div class="container_12">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
