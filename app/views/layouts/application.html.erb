<!DOCTYPE html>
<html>
  <head>
    <title>DebtPursuit</title>
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "1140", :media => "screen" %>
    <!--[if lte IE 9]>
      <%= stylesheet_link_tag "ie", :media => "screen" %>
    <![endif]-->
    <%= stylesheet_link_tag "smallerscreen", :media => "only screen and (max-width: 1023px)" %>
    <%= stylesheet_link_tag "mobile", :media => "handheld, only screen and (max-width: 767px)" %>
    <%= stylesheet_link_tag "layout", :media => "screen" %>
    <%= stylesheet_link_tag "redmond/jquery.ui", :media => "screen" %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <div class="container user_info">
      <div class="row">
        <nav class="nav twelvecol last">
          <ul>
            <li>
              <%= current_user.full_name %>
            </li>
            <li>
              <%= link_to "Settings", edit_user_registration_path %>
            </li>
            <li>
              <%= link_to "Logout", destroy_user_session_path, :class => "logout" %>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <header class="header container">
      <div class="row">
        <div class="threecol logo">
          <h1>Debt<span class="light">Pursuit</span></h1>
        </div>
        <div class="ninecol last">
          <%= navigation :home, :budgets, :contacts %>
        </div>
      </div>
    </header>

    <div class="layout">
      <div class="container">
        <section class="row">
          <div class="onecol">
            &nbsp;
          </div>
          <%= yield :subnavigation %>
        </section>
      </div>
      <%= yield %>
    </div>

    <footer class="footer container">
      <div class="row">
        <nav class="nav eightcol">
          <ul>
            <li><a href="#">License</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </nav>
        <div class="fourcol last">
          <div class="version_info">
            <p><%= "Code name: #{DebtPursuit::Version::CODE_NAME}. Version: #{DebtPursuit::Version::NUMBER}" %></p>
          </div>
        </div>
      </div>
    </footer>

    <%= javascript_include_tag :defaults %>
  </body>
</html>
